<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    tools:context="com.misabelleeli.indytrip.HotelActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/orange"
        android:gravity="center_vertical"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:paddingLeft="15dp"
        android:id="@+id/header">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:src="@drawable/travel"/>
        <TextView
            android:id="@+id/headerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="22sp"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Starting Point"
            android:textColor="#fff"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:id="@+id/subheader"
        android:background="#eee"
        android:gravity="center"
        android:paddingTop="6dp"
        android:paddingBottom="2dp"
        android:textSize="18sp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:text="Tell us where will you be staying"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/searchWrapper"
        android:layout_below="@+id/subheader"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/search_icon"
                android:layout_alignTop="@+id/search_view"
                android:layout_alignBottom="@+id/search_view"
                android:layout_alignLeft="@+id/search_view"
                android:layout_marginLeft="8dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:paddingLeft="34dp"
                android:hint="Search by Name.."
                android:id="@+id/search_view"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:singleLine="true"
                />
        </RelativeLayout>


    </LinearLayout>
    <ListView
        android:id="@+id/hotelsList"
        android:background="#fff"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchWrapper"
        android:layout_above="@+id/defaultLabel">
    </ListView>
    <TextView
        android:id="@+id/defaultBackgroundView"
        android:paddingBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No Result"
        android:textSize="35sp"
        android:textStyle="bold|italic"
        android:textColor="@color/grey"
        android:layout_above="@+id/defaultLabel"
    />
    <TextView
        android:id="@+id/defaultLabel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="6dp"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:background="@color/start_green"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:text="Not staying in these hotels?\nStart from the Monument Circle!"/>

</RelativeLayout>
