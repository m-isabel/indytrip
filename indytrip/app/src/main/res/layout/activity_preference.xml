        android:layout_marginTop="10dp">

        <!-- budget bar !-->
        <TextView
            android:id="@+id/budget_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Budget"
            android:textColor="#ffffff"
            android:textSize="20sp" />
        <SeekBar
            android:layout_below="@+id/budget_label"
            android:id="@+id/budget_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:progress="0"
            android:max="2"
            android:progressDrawable="@drawable/progressbar"
            android:secondaryProgress="0" />
        <TextView
            android:id="@+id/single_dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/budget_bar"
            android:text="$"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="@dimen/activity_vertical_margin" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/budget_bar"
            android:layout_alignLeft="@+id/single_dollar"
            android:text="$$"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="@dimen/activity_vertical_margin" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/budget_bar"
            android:layout_alignRight="@+id/budget_bar"
